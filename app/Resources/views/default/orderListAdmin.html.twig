{% extends 'base.html.twig' %}


{% block body %}

    <div class="container">
        {{ form_start(form) }}
        {{ form_end(form) }}
        <table class="table table-striped">
            <tr>
                <td>#</td>
                <td>ID zamówienia:</td>
                <td>Zamawiający:</td>
                <td>Data złożenia:</td>
                <td>Status:</td>
                <td></td>
            </tr>
        {% for order in orders %}
            <tr>
                <td>{{ loop.index }}</td>
                <td><a href="{{ path('adminOrdersDetails', {'orderId': order.id}) }}">{{ order.id }}</a></td>
                <td><a href="{{ path('adminUserView', {'id': order.user.id}) }}">{{ order.user.username}}</a></td>
                <td>{{ order.orderTime|date("d.m.y H:i:s") }}</td>
                <td>{{ order.status }}</td>
                <td><a href="{{ path('adminOrdersDetails', {'orderId': order.id}) }}" class="btn btn-default">Szczegóły</a> </td>
            </tr>
        {% endfor %}
        </table>

        <a href="{{ path('adminUpdateAllOrders') }}" class="btn btn-default">Zaktualizuj wszystkie produkty</a>
    </div>

{% endblock %}